const express = require('express');
const axios = require('axios');
const cors = require('cors');
const app = express();

app.use(cors());
app.use(express.json());

// بيانات FaucetPay الخاصة بك (يجب الحصول عليها من حسابك)
const FP_API_KEY = '108ca9a526b9eed220e5a88e77fa1cf4134ceec4a3d898e442853aadcb652560'; // ضع مفتاح الـ API هنا
const CURRENCY = 'TON';

app.post('/api/withdraw', async (req, res) => {
    const { email, amount } = req.body;

    try {
        // إرسال الطلب إلى FaucetPay API [cite: 2026-01-01]
        const response = await axios.post('https://faucetpay.io/api/v1/send', {
            api_key: FP_API_KEY,
            amount: amount,
            to: email,
            currency: CURRENCY,
            referral: 'no' // أو 'yes' إذا كنت تدفع عمولة إحالة
        });

        if (response.data.status === 200) {
            res.status(200).json({ success: true, message: 'تم الدفع بنجاح!' });
        } else {
            res.status(400).json({ success: false, message: response.data.message });
        }
    } catch (error) {
        res.status(500).json({ success: false, message: 'خطأ في الاتصال بالخادم' });
    }
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => console.log(`Server running on port ${PORT}`));
